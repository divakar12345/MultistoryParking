<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_30_dp"
            android:layout_height="@dimen/dimen_2_sp"
            android:layout_marginTop="@dimen/dimen_20_dp"
            android:background="@color/patterns_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_floor_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20_dp"
            android:padding="@dimen/dimen_16_dp"
            android:text="@string/add_a_floor"
            android:textColor="@color/medium_grey"
            android:textSize="@dimen/dimen_16_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            tools:ignore="LabelFor" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:layout_marginStart="@dimen/dimen_10_dp"
            android:layout_marginEnd="@dimen/dimen_10_dp"
            android:background="@color/patterns_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_floor_text" />

        <TextView
            android:id="@+id/set_pricing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16_dp"
            android:text="@string/set_pricing"
            android:textColor="@color/medium_grey"
            android:textSize="@dimen/dimen_16_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            tools:ignore="LabelFor" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:layout_marginStart="@dimen/dimen_10_dp"
            android:layout_marginEnd="@dimen/dimen_10_dp"
            android:background="@color/patterns_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/set_pricing_text" />

        <TextView
            android:id="@+id/view_audit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16_dp"
            android:text="@string/view_audit"
            android:textColor="@color/medium_grey"
            android:textSize="@dimen/dimen_16_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            tools:ignore="LabelFor" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dp"
            android:layout_marginStart="@dimen/dimen_10_dp"
            android:layout_marginEnd="@dimen/dimen_10_dp"
            android:background="@color/patterns_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_audit_text" />

        <TextView
            android:id="@+id/set_discount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10_dp"
            android:padding="@dimen/dimen_16_dp"
            android:text="@string/set_discount"
            android:textColor="@color/medium_grey"
            android:textSize="@dimen/dimen_16_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            tools:ignore="LabelFor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>